<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/login">

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/xeror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xerox "
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>


        <ImageView
            android:id="@+id/Xerorone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/white_rectangle_background"
            android:src="@drawable/xeroutline" />
    </LinearLayout>


    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textStyle="bold"
            android:paddingTop="10dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/Admin"
            android:background="@drawable/white_rectangle_background"
            android:src="@drawable/admin" />


    </LinearLayout>

    <TextView
        android:layout_below="@+id/admin"
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Sign in"
        android:textColor="#070706"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="#0E0B17"
        />

    <EditText
        android:id="@+id/loginpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginid"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_security"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="157dp"
        android:layout_height="66dp"
        android:layout_below="@id/loginpass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#A62EB3"
        android:text="LOGIN" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:gravity="center"
        android:layout_below="@+id/loginbtn">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Click here to Register !!"
            android:textStyle="bold"
            android:textColor="#C62222"/>
    </LinearLayout>



<LinearLayout
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/loginbtn"
    android:gravity="center">
    <Button
        android:id="@+id/Register"
        android:layout_width="157dp"
        android:layout_height="66dp"
        android:layout_below="@+id/loginbtn"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Register"
        android:backgroundTint="#147763"
        />
</LinearLayout>


</RelativeLayout>

