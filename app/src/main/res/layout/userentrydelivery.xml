<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">




        <TextView
            android:id="@+id/txtname1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="productname:"
            android:textColor="@color/color_info"
            android:textSize="25dp"
            android:textStyle="bold" />

            <TextView

                android:id="@+id/txtproductname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Value"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/txtquality1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="quality:"
                android:textColor="@color/color_info"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtquality"
                android:text="value"
                android:textSize="25dp"
                android:textStyle=""
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtprice1"
                android:text="price:"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/color_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtprice"
                android:text="value"
                android:textSize="25dp"
                android:textStyle=""
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtdeliveryurl1"
                android:text="Tracking Number:"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/color_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtdeliveryurl"
                android:text="value"
                android:textSize="25dp"
                android:textStyle=""
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtdeliveryurl2"
                android:text="Courier:"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/color_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtflatform"
                android:text="https://trackcourier.io/professional-courier-tracking"
                android:autoLink="all"
                android:textSize="25dp"
                android:textStyle=""
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>