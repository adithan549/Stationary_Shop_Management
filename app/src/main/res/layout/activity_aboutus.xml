<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adminorderdetails"
    android:background="#F0E7D5"> <!-- Light beige background for elegance -->

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:background="#4B0082"> 

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="About Us"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFD700"/> <!-- Gold Text -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/animation"
        android:layout_below="@id/text"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="180dp"
            app:lottie_rawRes="@raw/aboutus"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:layout_below="@id/animation"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History:"
            android:textStyle="bold"
            android:textColor="#4B0082"
        android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:paddingTop="10dp"
        android:id="@+id/l3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:text="Since last 20 years, we have been providing Stationery Products. All products are of high quality."
            android:textSize="20sp"
            android:textStyle="normal"
        android:textColor="#333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l3"
        android:paddingTop="10dp"
        android:id="@+id/l5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:text="The products will always be good and the best."
            android:textSize="20sp"
            android:textStyle="normal"
        android:textColor="#333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l5"
        android:paddingTop="10dp"
        android:id="@+id/l7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:text="You can use this application to order the products, and you will receive them on time."
            android:textSize="20sp"
            android:textStyle="normal"
        android:textColor="#333333" />
    </LinearLayout>
</RelativeLayout>
